{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "@test/*": ["../tests/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src", "tests"]
}
